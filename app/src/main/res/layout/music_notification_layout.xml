<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/rect_selector">

    <ImageView
        android:id="@+id/music_notification_icon_iv"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_8"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/music_notification_content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/music_notification_icon_iv"
        android:layout_alignBottom="@id/music_notification_icon_iv"
        android:layout_toEndOf="@id/music_notification_icon_iv"
        android:layout_toRightOf="@id/music_notification_icon_iv"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_notification_name_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_100"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            tools:text="权御天下" />

        <TextView
            android:id="@+id/music_notification_auth_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_100"
            android:maxLines="1"
            android:textColor="#5b5b5b"
            android:textSize="@dimen/sp_12"
            tools:text="权御天下" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/music_notification_content_ll"
        android:layout_alignBottom="@id/music_notification_content_ll"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/music_notification_content_ll"
        android:layout_toRightOf="@id/music_notification_content_ll"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <ImageView
            android:id="@+id/music_notification_play_iv"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_margin="@dimen/dp_4"
            android:contentDescription="@null"
            android:src="@drawable/ic_play_circle_outline_black_24dp" />

        <ImageView
            android:id="@+id/music_notification_next_iv"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_margin="@dimen/dp_4"
            android:contentDescription="@null"
            android:src="@drawable/ic_skip_next_black_24dp" />

        <ImageView
            android:id="@+id/music_notification_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_gray_24dp" />

    </LinearLayout>

</RelativeLayout>