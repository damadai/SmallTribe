        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.zaze.tribe.view.WidthFitSquareLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/music_detail_album_cover_fragment"
                android:name="com.zaze.tribe.music.MusicAlbumCoverFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.zaze.tribe.view.WidthFitSquareLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
