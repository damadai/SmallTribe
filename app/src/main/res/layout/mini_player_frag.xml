<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="com.zaze.tribe.music.MusicPlayerRemote" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/rect_selector"
        android:orientation="vertical"
        android:visibility="@{MusicPlayerRemote.curMusicData == null ? View.GONE : View.VISIBLE}">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:max="10000"
            android:progress="@{MusicPlayerRemote.progress}"
            android:progressDrawable="@drawable/progress_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4">

            <androidx.cardview.widget.CardView
                android:id="@+id/mini_player_album_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    app:bmp="@{MusicPlayerRemote.curMusicData}"
                    tools:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/mini_player_menu_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mini_player_status_iv"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:onClick="@{()-> MusicPlayerRemote.start()}"
                    android:src="@{MusicPlayerRemote.isPaused?@drawable/ic_play_circle_outline_black_24dp:@drawable/ic_pause_circle_outline_black_24dp}"
                    tools:src="@drawable/ic_play_circle_outline_black_24dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mini_player_list_iv"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:src="@drawable/ic_more_vert_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/mini_player_menu_ll"
                android:layout_toLeftOf="@id/mini_player_menu_ll"
                android:layout_toEndOf="@id/mini_player_album_cv"
                android:layout_toRightOf="@id/mini_player_album_cv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mini_player_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:text="@{MusicPlayerRemote.curMusicData.title}"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    tools:text="极乐净土极乐净土极乐净土极乐净土极乐净土" />

                <TextView
                    android:id="@+id/mini_player_artist_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{MusicPlayerRemote.curMusicData.artistName}"
                    android:textSize="@dimen/sp_12"
                    tools:text="MARIA" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>
