<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.zaze.tribe.music.MusicPlayerRemote" />

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_4">

            <ImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                app:bmp="@{MusicPlayerRemote.curMusicData}"
                tools:src="@mipmap/ic_launcher" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/mini_player_menu_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mini_player_status_iv"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:contentDescription="@null"
                        android:onClick="@{()-> MusicPlayerRemote.start()}"
                        android:src="@{MusicPlayerRemote.isPaused?@drawable/ic_play_circle_outline_black_24dp:@drawable/ic_pause_circle_outline_black_24dp}"
                        tools:src="@drawable/ic_play_circle_outline_black_24dp" />

                    <ImageView
                        android:id="@+id/mini_player_list_iv"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_more_vert_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/mini_player_menu_ll"
                    android:layout_toStartOf="@id/mini_player_menu_ll"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mini_player_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="14"
                        android:maxLines="1"
                        android:text="@{MusicPlayerRemote.curMusicData.name}"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_16"
                        tools:text="极乐净土极乐净土极乐净土极乐净土极乐净土" />

                    <TextView
                        android:id="@+id/mini_player_artist_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{MusicPlayerRemote.curMusicData.artist}"
                        android:textSize="@dimen/sp_14"
                        tools:text="MARIA" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:max="10000"
            android:progress="@{MusicPlayerRemote.progress}"
            android:progressDrawable="@drawable/progress_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@color/main_split_line" />
    </FrameLayout>
</layout>
